@model BookReservationSystem.ViewModels.Books.AddBookViewModel

<h1>Add a new book to the store</h1>

@using(Html.BeginForm("Add", "Book", FormMethod.Post, new { @class = "form-horizontal" })) {

    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Title" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Title" name="Title" placeholder="Title">
        </div>
    </div>
    <div class="form-group">
        <label for="Author" class="col-sm-2 control-label">Author</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Author" name="Author" placeholder="Author">
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-sm-2 control-label">Description</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="Description" name="Description" placeholder="Description">
        </div>
    </div>
    <div class="form-group"> 
        <label for="SelectedCategory" class="col-sm-2 control-label">Category</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(t => t.SelectedCategory, Model.Categories, new { @class = "form-control" })
        </div>
    </div>
     <div class="form-group">
         <label for="PagetNo" class="col-sm-2 control-label">Number of pages</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="PagetNo" name="PagetNo" placeholder="100">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Add</button>
        </div>
    </div>

}
